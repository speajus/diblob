{
  "name": "@speajus/diblob-mcp",
  "version": "0.5.0",
  "description": "Model Context Protocol (MCP) server implementation for diblob dependency injection containers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speajus/diblob.git"
  },
  "bugs": {
    "url": "https://github.com/speajus/diblob/issues"
  },
  "homepage": "https://speajus.github.io/diblob/",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build:all": "pnpm --filter @speajus/diblob build && pnpm --filter @speajus/diblob-mcp build && pnpm --filter @speajus/diblob-grpc build && pnpm --filter @speajus/diblob-drizzle build && pnpm --filter @speajus/diblob-visualizer build",
    "dev": "tsc --watch",
    "example": "pnpm run build && tsx example.ts",
    "test": "pnpm run build && tsx --test test/*.test.ts",
    "test:watch": "tsx --test --watch test/*.test.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "dependency-injection",
    "di",
    "diblob",
    "server"
  ],
  "author": "Justin Spears <speajus@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@speajus/diblob":"workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
