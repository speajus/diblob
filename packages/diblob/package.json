{
  "name": "@speajus/diblob",
  "version": "1.0.2",
  "description": "A dependency injection framework where the proxy (blob) is the key",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speajus/diblob.git"
  },
  "bugs": {
    "url": "https://github.com/speajus/diblob/issues"
  },
  "homepage": "https://speajus.github.io/diblob/",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build:all": "pnpm --filter @speajus/diblob build && pnpm --filter @speajus/diblob-mcp build && pnpm --filter @speajus/diblob-connect build && pnpm --filter @speajus/diblob-visualizer build",
    "dev": "tsc --watch",
    "example": "tsx examples/basic.ts",
    "tsc:test": "tsc -p tsconfig.test.json",
    "test": "pnpm run build && tsx --test test/*.test.ts",
    "test:watch": "tsx --test --watch test/*.test.ts"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "ioc",
    "proxy",
    "reactive"
  ],
  "author": "Justin Spears <speajus@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "patch-package": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4"
  }
}
