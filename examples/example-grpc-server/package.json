{
  "name": "example-grpc-server",
  "version": "1.0.0",
  "description": "Example gRPC server using diblob-grpc and diblob-drizzle",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm run proto:generate && pnpm run db:generate && tsc",
    "dev": "tsx src/index.ts",
    "start": "pnpm run build && node dist/index.js",
    "test": "pnpm run build && tsx --test src/**/*.test.ts",
    "client": "tsx src/client.ts",
    "client:typed": "tsx src/client-typed.ts",
    "proto:generate": "protoc --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./src/generated --ts_proto_opt=outputServices=grpc-js,env=node,esModuleInterop=true --proto_path=./proto ./proto/*.proto",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:reset": "tsx src/db/seed.ts --reset"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.12.4",
    "@grpc/proto-loader": "^0.7.15",
    "@speajus/diblob": "workspace:*",
    "@speajus/diblob-drizzle": "workspace:*",
    "@speajus/diblob-grpc": "workspace:*",
    "drizzle-orm": "^0.36.0",
    "drizzle-seed": "^0.1.3"
  },
  "devDependencies": {
    "@bufbuild/protobuf": "^2.10.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.0.0",
    "better-sqlite3": "^11.10.0",
    "drizzle-kit": "^0.28.1",
    "protoc": "^33.0.0",
    "ts-proto": "^2.8.3",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}
