{
  "name": "diblob-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for diblob dependency injection framework and visualizer",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:diblob && npm run build:visualizer",
    "build:diblob": "npm run build -w @speajus/diblob",
    "build:visualizer": "npm run build -w @speajus/diblob-visualizer",
    "test": "npm run test -w @speajus/diblob",
    "test:watch": "npm run test:watch -w @speajus/diblob",
    "dev:visualizer": "npm run dev -w @speajus/diblob-visualizer",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "vitepress": "^1.6.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speajus/diblob.git"
  },
  "author": "Justin Spears <speajus@gmail.com>",
  "license": "MIT"
}
