{
  "name": "diblob-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for diblob dependency injection framework and visualizer",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:tsc": "tsc --build",
    "build:diblob": "pnpm --filter @speajus/diblob build",
    "build:mcp": "pnpm --filter @speajus/diblob-mcp build",
    "build:grpc": "pnpm --filter @speajus/diblob-connect build",
    "build:visualizer": "pnpm --filter @speajus/diblob-visualizer build",
    "test": "pnpm -r test",
    "test:watch": "pnpm --filter @speajus/diblob test:watch",
    "lint": "biome lint .",
    "lint:fix": "biome check --write .",
    "dev:visualizer": "pnpm --filter @speajus/diblob-visualizer dev",
    "dev:mcp": "pnpm --filter @speajus/diblob-mcp dev",
    "dev:grpc": "pnpm --filter @speajus/diblob-connect dev",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules && pnpm clean:projects",
    "clean:projects": "pnpm -r run clean",
    "clean:tsc": "tsc --build --clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@changesets/cli": "^2.27.1",
    "vitepress": "^1.6.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speajus/diblob.git"
  },
  "author": "Justin Spears <speajus@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.9.3"
  }
}
