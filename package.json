{
  "name": "diblob",
  "version": "0.1.0",
  "description": "A dependency injection framework where the proxy (blob) is the key",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "example": "tsx examples/basic.ts",
    "tsc:test": "tsc -p tsconfig.test.json",
    "test": "npm run build && tsx --test test/*.test.ts",
    "test:watch": "tsx --test --watch test/*.test.ts"
  },
  "keywords": [
    "dependency-injection",
    "di",
    "ioc",
    "proxy",
    "reactive"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}

